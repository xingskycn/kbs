}

time_t getnextday4am()
{
    time_t now = time(0);
    struct tm *tm = localtime(&now);

    if (tm->tm_hour >= 3) {
        now += 86400;
        tm = localtime(&now);
    }
    tm->tm_hour = 4;
    tm->tm_sec = 0;
    tm->tm_min = 4;
    return mktime(tm);
}

int ismonday()
{
    time_t now = time(0);
    struct tm *tm = localtime(&now);

    return tm->tm_wday == 1;
}

